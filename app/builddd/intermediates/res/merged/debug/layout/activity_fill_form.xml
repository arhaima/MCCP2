<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:scrollbars="horizontal">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        tools:context="com.example.hassannaqvi.mccp2.MainActivity">


        <TextView android:id="@+id/crf1_header" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="@string/MCCP2_label" android:textSize="30sp" />

        <View android:layout_width="match_parent" android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_101DATE" android:text="@string/MC_101"
            android:textColor="#ffffff" android:textSize="24sp" />


        <DatePicker android:id="@+id/MC_101DATE" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="5dp"
            android:textSize="24sp" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_101TIME" android:text="@string/MC_101TIME"
            android:textColor="#ffffff" android:textSize="24sp" />

        <TimePicker android:id="@+id/MC_101TIME" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="5dp"
            android:textSize="24sp" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_104" android:text="@string/MC_104" android:textColor="#ffffff"
            android:textSize="24sp" />

        <Spinner android:id="@+id/MC_104" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:entries="@array/MC_104_list"
            android:prompt="@string/MC_104"
            android:textSize="24sp"> <!-- Todo: Increase textSize  -->

        </Spinner>


        <!-- Cluster No. -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_105" android:text="@string/MC_105" android:textColor="#ffffff"
            android:textSize="24sp" />
        <EditText android:id="@+id/MC_105" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="5dp"
            android:hint="@string/MC_105" android:inputType="number" android:maxLength="6"
            android:singleLine="true" android:textSize="24sp" />

        <TextView android:id="@+id/MC_105Name" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="24dp"
            android:background="#ffd6d6" android:gravity="center" android:labelFor="@+id/MC_105"
            android:padding="5dp" android:text="@string/MC_105" android:textColor="#ff1e1e"
            android:textSize="24sp" android:visibility="invisible" />

        <!-- MC_106 - Household No. (with Family type) -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_106" android:text="@string/MC_106" android:textColor="#ffffff"
            android:textSize="24sp" />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right" android:orientation="horizontal">

            <EditText android:id="@+id/MC_106" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_marginBottom="5dp"
                android:layout_weight="1" android:hint="@string/MC_106" android:inputType="number"
                android:maxLength="3" android:singleLine="true" android:textSize="24sp" />
            <Spinner android:id="@+id/MC_106j" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:entries="@array/MC_106_list"
                android:prompt="@string/MC_106" android:textSize="24sp"></Spinner>

        </LinearLayout>
        <!-- MC_107 - EPI Mark -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_107" android:text="@string/MC_107" android:textColor="#ffffff"
            android:textSize="24sp" />

        <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:gravity="right" android:orientation="vertical">
            <RadioButton android:id="@+id/MC_107_Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio" android:text="@string/MC_Yes" />
            <RadioButton android:id="@+id/MC_107_No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio" android:text="@string/MC_No" />
            <RadioButton android:id="@+id/MC_107_Unclear" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="@string/MC_Unclear" />
        </RadioGroup>

        <!-- Instructions before MC_108 - Permission -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#ffd6d6" android:gravity="center"
            android:labelFor="@+id/MC_108inst" android:padding="5dp"
            android:text="@string/MC_108inst" android:textColor="#ff1e1e" android:textSize="24sp" />

        <!-- MC_108 - Permissions -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="24dp" android:background="#0000ff"
            android:labelFor="@+id/MC_108" android:text="@string/MC_108" android:textColor="#ffffff"
            android:textSize="24sp" />
        <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:gravity="right" android:orientation="vertical">
            <RadioButton android:id="@+id/MC_108_Yes" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio" android:text="@string/MC_Yes" />
            <RadioButton android:id="@+id/MC_108_No" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio" android:text="@string/MC_No" />
            <RadioButton android:id="@+id/MC_108_Close" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="@string/MC_108_Close" />


        </RadioGroup>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right" android:orientation="horizontal">
            <Button android:id="@+id/btn_End" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:text="@string/end_interview" android:textColor="#ff1e1e"
                android:textSize="24dp"

            />

            <Button android:id="@+id/btn_Continue" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:onClick="startInterview" android:text="@string/start_interview"
                android:textColor="#1ed61e" android:textSize="24dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
