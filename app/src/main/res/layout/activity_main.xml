<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/recordSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="20dp"
            android:textColor="@color/black_overlay"
            android:textSize="14sp" />

        <Button
        android:id="@+id/btn_fill_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"

            android:background="@color/colorPrimary"
        android:onClick="fillSurveyForm"
        android:text="@string/fill_form"
            android:textColor="@color/colorTextWhite"
            android:textSize="24sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/clusterNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cluster No."
                android:inputType="number" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="CheckCluster"
                android:text="Check Cluster" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/adminOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADMIN OPTIONS HERE" />

            <Button
                android:id="@+id/UpdateUsers"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="updateUsers"
                android:text="Update Users"
                android:textStyle="bold" />

            <Button
                android:id="@+id/syncFunction"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="syncFunction"
                android:text="Sync Function"
                android:textStyle="bold" />

            <Button
                android:id="@+id/openMap"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="openMap"
                android:text="Form Count on Map"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_test_form_S1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="testFormS1"
                android:text="Test Form Section 1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_test_form_S2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testFormS2"
                android:text="Test Form Section 2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_test_form_S3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testFormS3"
                android:text="Test Form Section 3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_test_form_S4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="testFormS4"
                android:text="Test Form Section 4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_test_form_S5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testFormS5"
                android:text="Test Form Section 5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_test_form_S6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testFormS6"
                android:text="Test Form Section 6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_move_DB_to_SD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="moveDbToSd"
                android:text="Move DB to SD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_DEVICE_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="showDeviceID"
                android:text="Show Device ID"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_show_GPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="showGPSCoordinates"
                android:text="Show GPS Coordinates"
                android:textSize="24sp" />

            <Button
                android:id="@+id/GetRawData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="GetRawData"
                android:text="Get Files Data"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="20dip"
                android:minHeight="2dip" />

            <!--<Button
                android:id="@+id/DumpFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="DumpFiles2DB"
                android:text="Sync Server with XML"
                android:textSize="24sp" />-->


            <Button
                android:id="@+id/TabNoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="submitTabNo"
                android:text="Sync Server with XML"
                android:textSize="24sp" />

            <Button
                android:id="@+id/DBManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:onClick="openDBManager"
                android:text="Open DB Manager"
                android:textSize="24sp" />
        </LinearLayout>

</LinearLayout>


</ScrollView>